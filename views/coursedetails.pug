html
    body
        h1  #{id} - #{details.title}
        hr
        h3 Course starts on:  #{details.startDate}
        h3 Number of students enrolled: #{details.numStud}
        h3 Status of the course is:  #{details.status}
        div
            h2 Do you want to delete this course?
            form(action="/delete" method="POST")
                select(name="delete")
                    option(value="No", selected="true") No
                    option(value="Yes") Yes
                input(type="text" name="id" value=id readonly)
                input(type="Submit" value="Submit")
            
        