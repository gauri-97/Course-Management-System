html
    body
        h1  #{id} - #{details.title}
        hr
        h3 Course starts on #{details.startDate}
        if flag==="yes"
            h3 You've already registered for this course
            h4 Do you want to delete this course from your registered list?
            form(action="/deletecourse" method="POST")
                input(type="text" name="username" placeholder="username")
                br
                select(name="delete")
                    option(value="Yes") Delete
                    option(value="No", selected="true") No
                input(type="text" name="courseid" value=id readonly)
                input(type="submit" value="submit")

        else if details.status==='active'
            form(action="/register" method="POST")
                input(type="text" name="username" placeholder="username")
                br
                select(name="register")
                    option(value="Yes", selected="true") Register
                    option(value="No") No
                input(type="text" name="courseid" value=id readonly)
                input(type="submit" value="submit")
        else
            h3 This course in unavailable, reason: #{details.status}
        
